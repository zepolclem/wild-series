{% extends "base.html.twig" %}
{% block title %}
    {{category.name}}
{% endblock %}
{% block body %}
    <h1>
        {{category.name}}
    </h1>
    {% for program in programs %}
        <div>
            <p>{{ program.summary }}</p>
            <h2>{{ loop.index }}
                /
                <a href="{{ path("program_show", { id: program.id }) }}">
                    {{ program.title }}
                </a>
            </h2>
        </div>
    {% endfor %}
{% endblock %}
