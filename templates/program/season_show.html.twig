{% extends 'base.html.twig' %}

{% block title %}All episodes
{% endblock %}

{% block body %}
	<div class="media">
		<img class="align-self-start mr-3" src="{{program.poster}}" alt="{{ program.title }} poster">
		<div class="media-body">
			<h1>Tous les épisodes de la saison
				{{season.number}}
				de
				{{program.title}}
				:
			</h1>
			{% for episode in season.episodes %}
				<div>
					<a href="{{ path("program_show_episode", { program_id: program.id, season_id: season.id, episode_id: episode.id})}}">
						<h2>{{ loop.index }}
							/
							{{ episode.title }}
						</h2>
					</a>
					<p>{{ episode.synopsis }}</p>
				</div>
			{% else %}
				Aucune épisode trouvé.
			{% endfor %}

			<a href="{{ path("program_show", { id: program.id }) }}">
				Retour à
				{{program.title}}
			</a>

		</div>
	</div>
{% endblock %}
